@model IEnumerable<MoviesApp.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("Add Movie", "New", null, new { @class = "btn btn-primary"})
<br>
<br>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.Name, "Edit", "Movies", new { id = item.Id }, null)</td>
                <td>@item.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>

